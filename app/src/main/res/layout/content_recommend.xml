<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/app_bar_main"
            android:id="@+id/app_bar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추천 여행기 탐색하기"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:textSize="30sp" />

        <Button
            android:layout_marginRight="5dp"
            android:background="@color/endColor2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnspring"
            android:text="봄"
            android:layout_above="@+id/btntra"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"/>
        <Button
            android:layout_margin="5dp"
            android:background="@color/endColor2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnsummer"
            android:text="여름"
            android:layout_alignBaseline="@+id/btnspring"
            android:layout_toRightOf="@+id/btnspring"
            android:layout_marginTop="30dp" />
        <Button
            android:layout_margin="5dp"
            android:background="@color/endColor2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnfall"
            android:text="가을"
            android:layout_alignBaseline="@+id/btnspring"
            android:layout_toRightOf="@+id/btnsummer"
            android:layout_marginTop="30dp" />
        <Button
            android:layout_marginLeft="5dp"
            android:background="@color/endColor2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnwinter"
            android:text="겨울"
            android:layout_alignBaseline="@+id/btnspring"
            android:layout_toRightOf="@+id/btnfall"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:layout_margin="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/endColor2"
            android:text="도시"
            android:id="@+id/btncity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <Button
            android:layout_margin="5dp"
            android:background="@color/endColor2"
            android:text="전통적인"
            android:id="@+id/btntra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btncity"
            android:layout_alignBaseline="@+id/btncity"/>
        <Button
            android:layout_margin="5dp"
            android:background="@color/endColor2"
            android:text="캠핑"
            android:id="@+id/btncamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btncity"
            android:layout_alignBaseline="@+id/btncity"/>
        <Button
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/endColor2"
            android:text="산"
            android:layout_marginLeft="20dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btntra"
            android:id="@+id/btnmountain"/>
        <Button
            android:layout_margin="5dp"
            android:background="@color/endColor2"
            android:text="계곡"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnmountain"
            android:layout_toRightOf="@+id/btnmountain"
            android:id="@+id/btnvalley"/>
        <Button
            android:layout_margin="5dp"
            android:background="@color/endColor2"
            android:text="바다"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnmountain"
            android:layout_toRightOf="@+id/btnvalley"
            android:id="@+id/btnsea"/>
        <Button
            android:layout_marginLeft="5dp"
            android:background="@color/endColor2"
            android:text="숲"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnmountain"
            android:layout_toRightOf="@+id/btnsea"
            android:id="@+id/btnforest"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>

</LinearLayout>
